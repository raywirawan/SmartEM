<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="4dp"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/lastupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:text="Last Updated : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/lastupdate"
            app:layout_constraintTop_toTopOf="@id/lastupdate"
            android:text="01-03-2020 14:39:00"/>
        <TextView
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/item_tv_voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_tv_current"
            app:layout_constraintTop_toBottomOf="@id/lastupdate"
            android:text="214.8V"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/item_tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_tv_voltage"
            app:layout_constraintTop_toTopOf="@+id/item_tv_voltage"
            android:text="6.74A"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltage"
            app:layout_constraintTop_toBottomOf="@id/item_tv_voltage"
            app:layout_constraintStart_toStartOf="@id/item_tv_voltage"/>
        <TextView
            android:id="@+id/current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current"
            app:layout_constraintTop_toBottomOf="@id/item_tv_current"
            app:layout_constraintStart_toStartOf="@id/item_tv_current"/>
        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/item_tv_apppower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/voltage"
            app:layout_constraintTop_toBottomOf="@id/voltage"
            android:text="860W"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/item_tv_realpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/current"
            app:layout_constraintTop_toTopOf="@+id/item_tv_apppower"
            android:text="790W"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/apppower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Power"
            app:layout_constraintTop_toBottomOf="@id/item_tv_apppower"
            app:layout_constraintStart_toStartOf="@id/item_tv_apppower"/>
        <TextView
            android:id="@+id/realpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Power"
            app:layout_constraintTop_toBottomOf="@id/item_tv_realpower"
            app:layout_constraintStart_toStartOf="@id/item_tv_realpower"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
